<div class="header">
			<div class="names">
				<h1 class="name">cat</h1>
				<div id="head" onmouseover="changeText('ch')" onmouseout="changeback('riona')" >
				<div id="text-display" >riona
				</div>
				</div>
			</div>
		<h1 class="surname">sparrow</h1>
		</div>	

#head {
  display: inline-block;
  position: absolute;
  font-size: 40px;
  line-height: 30px;
  color: white;
  padding: 20px;
  display: inline-block;
}
   function changeHead(text)
        {
            var display = document.getElementById('head');
            display.innerHTML = "";
            display.innerHTML = text;
        }
          function changeback(text)
        {
            var display = document.getElementById('head');
            display.innerHTML = "riona";
            display.innerHTML = text;
        }


